<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_gradiente4"
    android:gravity="center"
    >

    <!-- Texto que muestra "VIDEO" -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cu"
        android:text="Youtube Player"
        android:textColor="@color/verde_lima"
        android:textSize="34sp"
        android:typeface="normal" />

    <!-- WebView para reproducir el video de YouTube -->
    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp" />
</LinearLayout>
